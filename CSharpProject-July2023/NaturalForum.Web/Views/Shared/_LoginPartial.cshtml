@using Microsoft.AspNetCore.Identity
@using NaturalForum.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Profile" style="color: #ffffff;"
		   onmouseover="this.style.backgroundColor='#45a049'; this.style.color='#ffffff';"
		   onmouseout="this.style.backgroundColor='transparent'; this.style.color='#ffffff';"
		   onclick="this.style.backgroundColor='#4CAF50'; this.style.color='#ff0000';">Profile</a>
		</li>

		<li class="nav-item">
			<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
				<button type="submit" class="nav-link btn btn-link text-dark btn-sm btn-hover-effect">Logout</button>
			</form>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register"
		   style="color: #ffffff;"
		   onmouseover="this.style.backgroundColor='#45a049'; this.style.color='#ffffff';"
		   onmouseout="this.style.backgroundColor='transparent'; this.style.color='#ffffff';"
		   onclick="this.style.backgroundColor='#4CAF50'; this.style.color='#ff0000';">Register</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login"
		   style="color: #ffffff;"
		   onmouseover="this.style.backgroundColor='#45a049'; this.style.color='#ffffff';"
		   onmouseout="this.style.backgroundColor='transparent'; this.style.color='#ffffff';"
		   onclick="this.style.backgroundColor='#4CAF50'; this.style.color='#ff0000';">Login</a>
		</li>
	}
</ul>
