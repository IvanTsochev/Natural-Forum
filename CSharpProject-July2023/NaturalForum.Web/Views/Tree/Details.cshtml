@model TreeDetailsViewModel

@{
	ViewData["Title"] = $"{Model.Name} details";
}

<div class="container mt-4">
    <div class="row">
        <!-- Left column with animal information -->
        <div class="col-md-6">
            <h1 class="display-4 mb-0">@Model.Name</h1>
            <p class="lead mt-3">@Model.Description</p>
        </div>
        <!-- Right column with animal photo -->
        <div class="col-md-6">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-lg">
        </div>
    </div>
</div>

