@model TreeDetailsViewModel

@{
	ViewData["Title"] = $"{Model.Name} details";
    bool isUserAdmin = this.User.IsAdmin();
}

<div class="container mt-4">
    <div class="row">
        <!-- Left column with animal information -->
        <div class="col-md-6">
            <h1 class="display-4 mb-0">@Model.Name</h1>
            <p class="lead mt-3">@Model.Description</p>
        </div>
        <!-- Right column with animal photo -->
        <div class="col-md-6">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-lg">
        </div>
    </div>

    @if(isUserAdmin){
        <a asp-area="@AdminAreaName" asp-controller="Tree" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-area="@AdminAreaName" asp-controller="Tree" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    }
</div>

